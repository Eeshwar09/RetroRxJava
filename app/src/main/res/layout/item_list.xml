<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />

        <variable
            name="book"
            type="com.example.retrorxjava.model.Book" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/userNameParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:autoLink="web"
                    android:cursorVisible="true"
                    android:linksClickable="true"
                    android:text="@{book.title}"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlue"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText,TextViewEdits" />

                <TextView
                    android:id="@+id/bookId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@{book.id}"
                    android:textSize="12sp"
                    android:autoLink="web"
                    android:textColorLink="@color/colorBlue"
                    android:visibility="gone"
                    android:linksClickable="true"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@+id/bookTitle"
                    app:layout_constraintStart_toStartOf="@+id/bookTitle"
                    app:layout_constraintTop_toBottomOf="@+id/bookTitle"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/bookHtml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:visibility="gone"
                    android:textColorLink="@color/colorBlue"
                    app:layout_constraintEnd_toEndOf="@+id/bookId"
                    app:layout_constraintStart_toStartOf="@+id/bookId"
                    app:layout_constraintTop_toBottomOf="@+id/bookId"
                    tools:ignore="HardcodedText" />


                <TextView
                    android:id="@+id/bookUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:visibility="gone"
                    android:text="@{book.url}"
                    android:textColorLink="@color/colorBlue"
                    app:layout_constraintEnd_toEndOf="@+id/bookHtml"
                    app:layout_constraintStart_toStartOf="@+id/bookHtml"
                    app:layout_constraintTop_toBottomOf="@+id/bookHtml"
                    tools:ignore="HardcodedText" />


                <TextView
                    android:id="@+id/external_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="Comments"
                    android:textColorLink="@color/colorBlue"
                    app:layout_constraintEnd_toEndOf="@+id/bookUrl"
                    app:layout_constraintStart_toStartOf="@+id/bookUrl"
                    app:layout_constraintTop_toBottomOf="@+id/bookUrl"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/date_published"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@{book.date_published}"
                    app:layout_constraintEnd_toEndOf="@+id/external_url"
                    app:layout_constraintStart_toStartOf="@+id/external_url"
                    app:layout_constraintTop_toBottomOf="@+id/external_url"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@{book.author}"
                    app:layout_constraintEnd_toEndOf="@+id/date_published"
                    app:layout_constraintStart_toStartOf="@+id/date_published"
                    app:layout_constraintTop_toBottomOf="@+id/date_published"
                    tools:ignore="HardcodedText" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>